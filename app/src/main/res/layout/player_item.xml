<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:layout_margin="5dp"
    android:maxHeight="250dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="144dp"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_nome_jogador"
            android:layout_width="180dp"
            android:layout_height="75dp"
            android:textSize="30dp"
            tools:text="Nome" />

        <TextView
            android:id="@+id/text_jogador_posicao"
            android:layout_width="182dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/text_nome_jogador"
            android:textSize="20dp"
            tools:text="Posição" />

        <TextView
            android:id="@+id/text_jogador_idade"
            android:layout_width="182dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/text_jogador_posicao"
            android:text="Idade"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/text_jogador_time"
            android:layout_width="67dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/text_jogador_idade"
            android:text="Time"
            android:textSize="16dp" />

        <ImageView
            android:id="@+id/image_player"
            android:layout_width="101dp"
            android:layout_height="87dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="24dp"
            app:srcCompat="@android:drawable/sym_def_app_icon" />

    </RelativeLayout>

</android.support.v7.widget.CardView>